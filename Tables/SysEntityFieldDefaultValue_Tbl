-- Create the SysEntityFieldDefaultValue_Tbl table
-- Contains the defaults values of each field/column. You can customs multiple version of defaults values.
-- When entering a lot of data, some fields always have the same values, so if you define a version with default values for these fields, the system loads this value and you do not need to write them.
-- The value of the field must be the same type of the field, defined in the SysEntityStructure_Tbl.
-- The primary key: are the union of the columns FieldIDn + EntityIDn + DefaultVersionIDn + BusinessUnitIDn

-- #########################################################################################################################################################################################
-- ----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
-- First create the sequence SysEntityFieldDefaultValue_seq
-- 
DROP SEQUENCE IF EXISTS public."SysEntityFieldDefaultValue_Seq" CASCADE;

CREATE SEQUENCE public."SysEntityFieldDefaultValue_Seq"
    INCREMENT 1
    START 1
    MINVALUE 1
    MAXVALUE 2147483647
    CACHE 1;

ALTER SEQUENCE public."SysEntityFieldDefaultValue_Seq"
    OWNER TO postgres;

COMMENT ON SEQUENCE public."SysEntityFieldDefaultValue_Seq"
    IS 'The sequence SysEntityFieldDefaultValue_seq generate the nextval of the IDNum';


-- #########################################################################################################################################################################################
-- ----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
-- Second create the SysEntityFieldDefaultValue_Tbl table
-- ------------------------------------------------------------------------------------------------------------------------------------------------------------------------
-- Table: public.SysEntityFieldDefaultValue_Tbl
DROP TABLE IF EXISTS public."SysEntityFieldDefaultValue_Tbl" CASCADE;

CREATE TABLE IF NOT EXISTS public."SysEntityFieldDefaultValue_Tbl"
(
    "IDNum" integer NOT NULL DEFAULT nextval('"SysEntityFieldDefaultValue_Seq"'::regclass),
    "ID" uuid NOT NULL DEFAULT uuid_generate_v4 (),
    "FieldIDn" integer NOT NULL,
    "EntityIDn" integer NOT NULL,
    "DefaultVersionIDn" integer NOT NULL,
    "BusinessUnitIDn" integer NOT NULL,
    "FieldDefaultValue" character varying(250) NOT NULL,
    "StateIDn" smallint NOT NULL,
    "CreatedByIDn" integer NOT NULL,
    "LastModifiedByIDn" integer NOT NULL,
    "OwnerIDn" integer NOT NULL,
    "DateCreated" timestamp without time zone NOT NULL,
    "DateTimeStamp" timestamp without time zone NOT NULL DEFAULT CURRENT_TIMESTAMP,
    "TableHistory" text COLLATE pg_catalog."default",
    CONSTRAINT "SedvPk_IDNum" PRIMARY KEY ("IDNum"),
    CONSTRAINT "SedvUnique_ID" UNIQUE ("ID"),
    CONSTRAINT "SedvUnique_IDnFieldEntityDefValueBusinessUnit" UNIQUE ("FieldIDn", "EntityIDn", "DefaultVersionIDn", "BusinessUnitIDn")
)

TABLESPACE pg_default;

ALTER TABLE IF EXISTS public."SysEntityFieldDefaultValue_Tbl"
    OWNER to postgres;

-- ----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
-- Create the comments of the table fields elements
-- 
COMMENT ON TABLE public."SysEntityFieldDefaultValue_Tbl"
    IS 'Contains the system structure. In this table you build the tables and java entities structures, with thiers column and fields.
You must define all the properties of the entities.
The primary key: are the union of the columns FieldIDn + EntityIDn + BusinessUnitIDn.';

COMMENT ON COLUMN public."SysEntityFieldDefaultValue_Tbl"."IDNum"
    IS 'The IDNum is the autoincrement number';

COMMENT ON COLUMN public."SysEntityFieldDefaultValue_Tbl"."ID"
    IS 'The ID is the uniqueidentifier auto generated V4';

COMMENT ON COLUMN public."SysEntityFieldDefaultValue_Tbl"."FieldIDn"
    IS 'The FieldIDn is the IDNum of the field/column of the entity. Link with the SysBaseElement_Tbl.';

COMMENT ON COLUMN public."SysEntityFieldDefaultValue_Tbl"."EntityIDn"
    IS 'The EntityIDn is the IDNum of the entity, 2=SysEntity or 4=SysTable. Link with the SysBaseElement_Tbl.';

COMMENT ON COLUMN public."SysEntityFieldDefaultValue_Tbl"."DefaultVersionIDn"
    IS 'The DefaultVersionIDn is the IDNum of the DefaultVersion, defined in the SysBaseElement_Tbl.';

COMMENT ON COLUMN public."SysEntityFieldDefaultValue_Tbl"."BusinessUnitIDn"
    IS 'The BusinessUnitIDn is the business unit that the general option fields articles belong.';

COMMENT ON COLUMN public."SysEntityFieldDefaultValue_Tbl"."FieldDefaultValue"
    IS 'The FieldDefaultValue is a value that must be the same type of the field, defined in the SysEntityStructure_Tbl.';

COMMENT ON COLUMN public."SysEntityFieldDefaultValue_Tbl"."StateIDn"
    IS 'The StatedIDn is the IDNum that define if the record is enable or not.';

COMMENT ON COLUMN public."SysEntityFieldDefaultValue_Tbl"."CreatedByIDn"
    IS 'The CreatedByIDn is the IDNum of the user who created the record.';

COMMENT ON COLUMN public."SysEntityFieldDefaultValue_Tbl"."LastModifiedByIDn"
    IS 'The LastModifiedByIDn is the IDNum of the last user who modified the record.';

COMMENT ON COLUMN public."SysEntityFieldDefaultValue_Tbl"."OwnerIDn"
    IS 'The OwnerIDn is the IDNum of the record owner.';

COMMENT ON COLUMN public."SysEntityFieldDefaultValue_Tbl"."DateCreated"
    IS 'The DateCreated is the record creation datetime UTC.';

COMMENT ON COLUMN public."SysEntityFieldDefaultValue_Tbl"."DateTimeStamp"
    IS 'The DateTimeStamp is the datetime UTC of the last modification.';

COMMENT ON COLUMN public."SysEntityFieldDefaultValue_Tbl"."TableHistory"
    IS 'The TableHistory contain then change history of each column.';

-- ----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
-- Create the comments of the constraint elements
-- 
COMMENT ON CONSTRAINT "SedvPk_IDNum" ON public."SysEntityFieldDefaultValue_Tbl"
    IS 'The sequence SysEntityFieldDefaultValue_seq generate the nextval';

COMMENT ON CONSTRAINT "SedvUnique_ID" ON public."SysEntityFieldDefaultValue_Tbl"
    IS 'Is the uniqueidentifier';

COMMENT ON CONSTRAINT "SedvUnique_IDnFieldEntityDefValueBusinessUnit" ON public."SysEntityFieldDefaultValue_Tbl"
    IS 'A Default Value can be unique in a field of an Entity and a business unit.';

-- #########################################################################################################################################################################################
-- Second create the trigger before insert
--	Step 1: create the function before insert
-- ------------------------------------------------------------------------------------------------------------------------------------------------------------------------
-- FUNCTION: public.SysEntityFieldDefaultValueBeforeInsert_Tfnc()
DROP FUNCTION IF EXISTS public."SysEntityFieldDefaultValueBeforeInsert_Tfnc"() CASCADE;

CREATE OR REPLACE FUNCTION public."SysEntityFieldDefaultValueBeforeInsert_Tfnc"()
    RETURNS trigger
    LANGUAGE 'plpgsql'
    COST 100
    VOLATILE NOT LEAKPROOF
AS $BODY$
BEGIN
	-- ------------------------------------------------------------------------------------------------------------------
	-- Set the created date
	IF NEW."DateCreated" IS NULL THEN 
		NEW."DateCreated" := CURRENT_TIMESTAMP;
	END IF;
RETURN NEW;
END;
$BODY$;

ALTER FUNCTION public."SysEntityFieldDefaultValueBeforeInsert_Tfnc"()
    OWNER TO postgres;

COMMENT ON FUNCTION public."SysEntityFieldDefaultValueBeforeInsert_Tfnc"()
    IS 'Create the function to set de current timestamp for the datecreated field.
	This funtion is used by the SysEntityFieldDefaultValue_Tbl table before insert trigger.';

-- ------------------------------------------------------------------------------------------------------------------------------------------------------------------------
--	Step 2: create the trigger before insert in the SysEntityFieldDefaultValue table
-- Trigger: SysEntityFieldDefaultValueBeforeInsert_Trg
DROP TRIGGER IF EXISTS "SysEntityFieldDefaultValueBeforeInsert_Trg" ON public."SysEntityFieldDefaultValue_Tbl" CASCADE;

CREATE TRIGGER "SysEntityFieldDefaultValueBeforeInsert_Trg"
    BEFORE INSERT
    ON public."SysEntityFieldDefaultValue_Tbl"
    FOR EACH ROW
    EXECUTE FUNCTION public."SysEntityFieldDefaultValueBeforeInsert_Tfnc"();

COMMENT ON TRIGGER "SysEntityFieldDefaultValueBeforeInsert_Trg" ON public."SysEntityFieldDefaultValue_Tbl"
    IS 'Set the SysEntityFieldDefaultValueBeforeInsert_Tfnc function, that makes datetime UTC of the DateCreated field';

-- #########################################################################################################################################################################################
-- Third create the trigger before update
--	Step 1: create the function before update
-- ------------------------------------------------------------------------------------------------------------------------------------------------------------------------
-- FUNCTION: public.SysEntityFieldDefaultValueBeforeUpdate_Tfnc()
DROP FUNCTION IF EXISTS public."SysEntityFieldDefaultValueBeforeUpdate_Tfnc"() CASCADE;

CREATE OR REPLACE FUNCTION public."SysEntityFieldDefaultValueBeforeUpdate_Tfnc"()
    RETURNS trigger
    LANGUAGE 'plpgsql'
    COST 100
    VOLATILE NOT LEAKPROOF
AS $BODY$
DECLARE
	v_TableHistory text;
	v_TableHistoryOld text;
BEGIN
	-- ------------------------------------------------------------------------------------------------------------------
	-- Set the DateTimeStamp
	NEW."DateTimeStamp" := CURRENT_TIMESTAMP;
	-- ------------------------------------------------------------------------------------------------------------------
	-- Set the created date
	IF NEW."TableHistory" = 'SetNull' THEN 
		NEW."TableHistory" := NULL;
	ELSEIF NEW."TableHistory" = 'SetOff' THEN
		NEW."TableHistory" := OLD."TableHistory";
	ELSE
		v_TableHistoryOld := OLD."TableHistory";
		v_TableHistory = '';
		IF NEW."FieldIDn" <> OLD."FieldIDn" THEN v_TableHistory := OLD."FieldIDn"; ELSE v_TableHistory := '†'; END IF;
		IF NEW."EntityIDn" <> OLD."EntityIDn" THEN v_TableHistory := OLD."EntityIDn"; ELSE v_TableHistory := '†'; END IF;
		IF NEW."DefaultVersionIDn" <> OLD."DefaultVersionIDn" THEN v_TableHistory := OLD."DefaultVersionIDn"; ELSE v_TableHistory := '†'; END IF;
		IF NEW."BusinessUnitIDn" <> OLD."BusinessUnitIDn" THEN v_TableHistory := OLD."BusinessUnitIDn"; ELSE v_TableHistory := '†'; END IF;
		IF NEW."FieldDefaultValue" <> OLD."FieldDefaultValue" THEN v_TableHistory := OLD."FieldDefaultValue"; ELSE v_TableHistory := '†'; END IF;
		IF NEW."StateIDn" <> OLD."StateIDn" THEN v_TableHistory := CONCAT(v_TableHistory,'†',OLD."StateIDn"); ELSE v_TableHistory := CONCAT(v_TableHistory,'†'); END IF;
		IF NEW."CreatedByIDn" <> OLD."CreatedByIDn" THEN v_TableHistory := CONCAT(v_TableHistory,'†',OLD."CreatedByIDn"); ELSE v_TableHistory := CONCAT(v_TableHistory,'†'); END IF;
		IF NEW."LastModifiedByIDn" <> OLD."LastModifiedByIDn" THEN v_TableHistory := CONCAT(v_TableHistory,'†',OLD."LastModifiedByIDn"); ELSE v_TableHistory := CONCAT(v_TableHistory,'†'); END IF;
		IF NEW."OwnerIDn" <> OLD."OwnerIDn" THEN v_TableHistory := CONCAT(v_TableHistory,'†',OLD."OwnerIDn"); ELSE v_TableHistory := CONCAT(v_TableHistory,'†'); END IF;
		IF v_TableHistoryOld IS NULL THEN v_TableHistory := CONCAT(v_TableHistory,'†',NEW."DateCreated"); ELSE v_TableHistory := CONCAT(v_TableHistory,'†'); END IF;
		IF NEW."DateTimeStamp" <> OLD."DateTimeStamp" THEN v_TableHistory := CONCAT(v_TableHistory,'†',OLD."DateTimeStamp"); ELSE v_TableHistory := CONCAT(v_TableHistory,'†'); END IF;
		IF v_TableHistoryOld IS NULL THEN
			NEW."TableHistory" := v_TableHistory;
		ELSE
			NEW."TableHistory" := CONCAT(v_TableHistory,'‡',v_TableHistoryOld);
		END IF;
		
	END IF;
	RETURN NEW;
END;
$BODY$;

ALTER FUNCTION public."SysEntityFieldDefaultValueBeforeUpdate_Tfnc"()
    OWNER TO postgres;

COMMENT ON FUNCTION public."SysEntityFieldDefaultValueBeforeUpdate_Tfnc"()
    IS 'Create the function to set the new datetimestamp and the history of the record.
	This funtion is used by the SysEntityFieldDefaultValue_Tbl table before update trigger.';

-- ------------------------------------------------------------------------------------------------------------------------------------------------------------------------
--	Step 2: create the trigger before update in the SysEntityFieldDefaultValue_Tbl table
-- Trigger: SysEntityFieldDefaultValueBeforeUpdate_Trg
DROP TRIGGER IF EXISTS "SysEntityFieldDefaultValueBeforeUpdate_Trg" ON public."SysEntityFieldDefaultValue_Tbl" CASCADE;

CREATE TRIGGER "SysEntityFieldDefaultValueBeforeUpdate_Trg"
    BEFORE UPDATE 
    ON public."SysEntityFieldDefaultValue_Tbl"
    FOR EACH ROW
    EXECUTE FUNCTION public."SysEntityFieldDefaultValueBeforeUpdate_Tfnc"();

COMMENT ON TRIGGER "SysEntityFieldDefaultValueBeforeUpdate_Trg" ON public."SysEntityFieldDefaultValue_Tbl"
    IS 'Set the SysEntityFieldDefaultValueBeforeUpdate_Tfnc function, that makes datetime UTC and the record History.';
